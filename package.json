{
  "name": "uni-helper-app",
  "private": true,
  "version": "1.1.1",
  "description": "Internal work monitoring application",
  "type": "module",
  "main": "electron/main.mjs",
  "homepage": ".",
  "scripts": {
    "test": "concurrently \"vite\" \"cross-env NODE_ENV=development electron .\"",
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "build": "rimraf dist && rimraf build && vite build && electron-builder",
    "build:win": "rimraf dist && vite build && electron-builder --win --x64",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:test": "electron electron/main.mjs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Jang-oi/uni-helper.git"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-alert-dialog": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.2.3",
    "@radix-ui/react-dialog": "^1.1.7",
    "@radix-ui/react-dropdown-menu": "^2.1.14",
    "@radix-ui/react-label": "^2.1.3",
    "@radix-ui/react-progress": "^1.1.4",
    "@radix-ui/react-radio-group": "^1.3.6",
    "@radix-ui/react-scroll-area": "^1.2.4",
    "@radix-ui/react-select": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.3",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-switch": "^1.1.4",
    "@radix-ui/react-tabs": "^1.1.4",
    "@radix-ui/react-tooltip": "^1.2.0",
    "@tailwindcss/vite": "^4.1.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-localshortcut": "^3.2.1",
    "electron-store": "^10.0.1",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.487.0",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.55.0",
    "react-router-dom": "^7.5.0",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.2.0",
    "tailwindcss": "^4.1.3",
    "tw-animate-css": "^1.2.5",
    "zod": "^3.24.2",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^22.14.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "6.3.4",
    "wait-on": "^8.0.3"
  },
  "author": {
    "name": "Unipost"
  },
  "build": {
    "appId": "com.unipost.helper.app",
    "productName": "uni-helper-app",
    "files": [
      "electron/*",
      "build/**/*"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "electron"
    },
    "asar": false,
    "win": {
      "target": "nsis",
      "icon": "./electron/256_favicon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": true,
      "createDesktopShortcut": true,
      "shortcutName": "Uni-Helper-App",
      "artifactName": "Uni-Helper-App ${version}.${ext}",
      "uninstallDisplayName": "Uni-Helper-App"
    },
    "publish": {
      "provider": "github"
    }
  }
}
